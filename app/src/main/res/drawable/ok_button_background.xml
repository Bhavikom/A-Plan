<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:padding="0dp"
            android:shape="rectangle">
            <solid
                android:color="@color/white_color" />
            <corners
                android:bottomLeftRadius="@dimen/ten_sp"
                android:bottomRightRadius="@dimen/ten_sp"
                android:topLeftRadius="@dimen/ten_sp"
                android:topRightRadius="@dimen/ten_sp" />
            <!-- <stroke android:width="4px" android:color="#ffffff" /> -->
        </shape>

    </item>

    <item
        android:state_focused="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:padding="0dp"
            android:shape="rectangle">
            <solid
                android:color="@color/white_color" />
            <corners
                android:bottomLeftRadius="@dimen/ten_sp"
                android:bottomRightRadius="@dimen/ten_sp"
                android:topLeftRadius="@dimen/ten_sp"
                android:topRightRadius="@dimen/ten_sp" />
            <!-- <stroke android:width="4px" android:color="#ffffff" /> -->
        </shape>

    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:padding="0dp"
            android:shape="rectangle">
            <solid
                android:color="@color/black" />
            <corners
                android:bottomLeftRadius="@dimen/ten_sp"
                android:bottomRightRadius="@dimen/ten_sp"
                android:topLeftRadius="@dimen/ten_sp"
                android:topRightRadius="@dimen/ten_sp" />
            <!-- <stroke android:width="4px" android:color="#ffffff" /> -->
        </shape>
    </item>
</selector>

