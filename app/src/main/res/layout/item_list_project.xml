<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_task_list_main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/textviewprojectname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_sp"
                android:text="Project Name"
                android:textColor="@color/indigo_color"
                android:textSize="@dimen/fourteen_sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/textviewtaskname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_sp"
                android:layout_marginTop="@dimen/five_sp"
                android:layout_toRightOf="@+id/textviewno"
                android:gravity="left"
                android:text="Task Name"
                android:textColor="@color/indigo_color"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_sp"
            android:layout_marginTop="@dimen/five_sp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgdateitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imgtraficeitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentee_sp"
                android:layout_toRightOf="@+id/imgdateitem"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/linear_status_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_sp"
                android:layout_toRightOf="@+id/imgtraficeitem"
                android:gravity="center"
                android:orientation="horizontal">

                <!--<ImageView
                        android:scaleType="fitCenter"
                        android:id="@+id/imgstatusitem"
                        android:layout_margin="@dimen/ten_sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />-->
            </LinearLayout>

            <TextView
                android:id="@+id/textviewfinishdateitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/twentee_sp"
                android:layout_marginTop="@dimen/ten_sp"
                android:text="finishdate"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ten_sp"

        android:background="@color/select_filter" />
</LinearLayout>