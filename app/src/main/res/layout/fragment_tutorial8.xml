<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reletive_tutorial8_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial_first">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/tutorial_first"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="@dimen/fiftee_sp"
            android:layout_marginRight="@dimen/fiftee_sp"
            android:layout_weight="0.4">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/app_logo" />
        </LinearLayout>

        <TextView
            android:id="@+id/lable_aplan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirtee_sp"
            android:gravity="center_horizontal"
            android:text="A-Plan"
            android:textColor="@color/red"
            android:textSize="@dimen/twentee_sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginTop="@dimen/hundred_sp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_dontshowagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't show it again"
                android:textColor="@color/black_color"
                android:textSize="@dimen/sixteen_sp" />

            <ToggleButton
                android:id="@+id/toggle_button"
                android:layout_width="@dimen/sixtee_sp"
                android:layout_height="@dimen/fiftee_sp"
                android:layout_marginLeft="@dimen/ten_sp"
                android:background="@drawable/toogle_selector"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textskip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/fifteen_sp"
        android:layout_marginRight="@dimen/fifteen_sp"
        android:text="Skip"
        android:textColor="@color/red"
        android:textSize="@dimen/fifteen_sp" />

</RelativeLayout>