<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_admin_splash_screen"
    android:background="@drawable/popup_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twentee_sp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_admin_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/header_color"
            android:gravity="center"
            android:padding="@dimen/ten_sp"
            android:text="@string/admin_header"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/header_textsize" />


        <!-- start for language panel -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twentee_sp">

            <ImageView
                android:id="@+id/img_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_sp"
                android:layout_toLeftOf="@+id/img_germany" />

            <ImageView
                android:id="@+id/img_germany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ten_sp" />
        </RelativeLayout>
        <!-- end for language panel -->


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/hundred_fiftee_sp"
            android:layout_height="@dimen/hundred_fiftee_sp"
            android:layout_gravity="center"
            android:src="@drawable/app_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fourtee_sp"
                android:layout_weight="0.80"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05" />

                    <TextView
                        android:id="@+id/lableemail"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:gravity="right"
                        android:text="@string/email"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/sixteen_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_email"
                        android:layout_width="0sp"
                        android:layout_height="@dimen/fourtee_sp"
                        android:layout_marginLeft="@dimen/ten_sp"
                        android:layout_weight="0.55"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:paddingLeft="@dimen/five_sp"
                        android:paddingRight="@dimen/five_sp"
                        android:text=""
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/edittext_textsize" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05" />

                    <TextView
                        android:id="@+id/lablename"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:gravity="right"
                        android:text="@string/name_label"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/sixteen_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="0sp"
                        android:layout_height="@dimen/fourtee_sp"
                        android:layout_marginLeft="@dimen/ten_sp"
                        android:layout_weight="0.55"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:paddingLeft="@dimen/five_sp"
                        android:paddingRight="@dimen/five_sp"
                        android:text=""
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/edittext_textsize" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.0" />

                    <TextView

                        android:id="@+id/lablecompony"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/companyname"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/sixteen_sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_compony"
                        android:layout_width="0sp"
                        android:layout_height="@dimen/fourtee_sp"
                        android:layout_marginLeft="@dimen/ten_sp"
                        android:layout_weight="0.60"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:paddingLeft="@dimen/five_sp"
                        android:paddingRight="@dimen/five_sp"
                        android:text=""
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/edittext_textsize" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05" />
                </LinearLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05" />

                    <TextView
                        android:id="@+id/lablenewslatter"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:gravity="right"
                        android:text="@string/newsletter"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55">

                        <ToggleButton
                            android:id="@+id/switch_newsletter"
                            android:layout_width="@dimen/sixtee_sp"
                            android:layout_height="@dimen/fourtee_sp"
                            android:layout_marginLeft="@dimen/ten_sp"
                            android:background="@drawable/toogle_selector"
                            android:textOff=""
                            android:textOn="" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#000" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/labledemouser"
                        android:layout_width="@dimen/hundred_twenty_sp"
                        android:layout_height="wrap_content"
                        android:text="@string/demo_user"
                        android:textColor="@color/textview_color_grey"
                        android:textSize="@dimen/twentee_sp"
                        android:visibility="gone" />

                    <ToggleButton
                        android:id="@+id/toggle_button2"
                        android:layout_width="@dimen/sixtee_sp"
                        android:layout_height="@dimen/fourtee_sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toogle_selector"
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn=""
                        android:visibility="gone" />
                </RelativeLayout>


                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="@dimen/three_hundred_twenty"
                    android:layout_height="@dimen/fourtee_sp"
                    android:layout_marginBottom="@dimen/ten_sp"
                    android:layout_marginTop="@dimen/twentee_sp"
                    android:background="@drawable/button_icon"
                    android:text="@string/send"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/twentee_sp" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_ssoft_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fifteen_sp"
        android:text="@string/my_smsc_link"
        android:textSize="@dimen/header_textsize"
        android:visibility="gone" />
</RelativeLayout>