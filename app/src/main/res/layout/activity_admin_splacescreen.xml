<RelativeLayout
    android:background="@drawable/popup_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relative_admin_splash_screen"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:background="@color/header_color"
            android:id="@+id/txt_admin_header"
            android:gravity="center"
            android:padding="@dimen/ten_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="@string/admin_header"
            android:textColor="@color/red"
            android:textSize="@dimen/header_textsize"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#000"/>


        <!-- start for language panel -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_sp"
            >
            <ImageView
                android:layout_marginRight="@dimen/ten_sp"
                android:id="@+id/img_english"
                android:layout_toLeftOf="@+id/img_germany"
                android:layout_width="@dimen/thirtee_five"
                android:layout_height="@dimen/thirtee_sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/img_germany"
                android:layout_marginRight="@dimen/ten_sp"
                android:layout_width="@dimen/thirtee_five"
                android:layout_height="@dimen/thirtee_sp"
                />
        </RelativeLayout>
        <!-- end for language panel -->


        <ImageView
            android:layout_width="@dimen/eightee_sp"
            android:layout_height="@dimen/eightee_sp"
            android:layout_gravity="center"
            android:src="@drawable/app_logo"
            android:id="@+id/imageView6"/>
        <ScrollView
            android:layout_above="@+id/txt_ssoft_link"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="0.05"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_weight="0.90"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fourtee_sp"
                android:gravity="center"
                android:orientation="vertical">

                <!-- for email -->
                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/ten_sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                   <TextView
                        android:layout_weight="0.02"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="0.45"
                        android:gravity="right"
                        android:id="@+id/lableemail"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/thirteen_sp"/>

                    <EditText
                        android:layout_weight="0.55"
                        android:id="@+id/edit_email"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five_sp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:paddingLeft="@dimen/five_sp"
                        android:paddingRight="@dimen/five_sp"
                        android:text=""
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/thirteen_sp"/>
                    <TextView
                        android:layout_weight="0.02"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <!-- end for email -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#000"/>

                <!-- for name -->
                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten_sp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">
                   <TextView
                        android:layout_weight="0.02"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="0.45"
                        android:gravity="right"
                        android:id="@+id/lablename"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/name_label"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/thirteen_sp"/>

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five_sp"
                        android:layout_weight="0.55"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:paddingLeft="@dimen/five_sp"
                        android:paddingRight="@dimen/five_sp"
                        android:text=""
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/thirteen_sp" />

                    <TextView
                        android:layout_weight="0.02"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!-- end for name -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#000"/>

                <!-- compony name -->
                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten_sp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">
                   <TextView
                        android:layout_weight="0.02"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="0.45"
                        android:gravity="right"
                        android:id="@+id/lablecompony"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/companyname"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/thirteen_sp"/>

                    <EditText
                        android:layout_weight="0.55"
                        android:id="@+id/edit_compony"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five_sp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:paddingLeft="@dimen/five_sp"
                        android:paddingRight="@dimen/five_sp"
                        android:text=""
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/thirteen_sp"/>
                    <TextView
                        android:layout_weight="0.02"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!-- end for compony name -->

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#000"/>

                <!-- for news letter -->
                <LinearLayout
                    android:gravity="center_vertical"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">
                   <TextView
                        android:layout_weight="0.02"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="0.45"
                        android:gravity="right"
                        android:id="@+id/lablenewslatter"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/newsletter"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/thirteen_sp"/>

                    <LinearLayout
                        android:layout_weight="0.55"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content">
                        <ToggleButton
                            android:layout_marginLeft="@dimen/ten_sp"
                            android:id="@+id/switch_newsletter"
                            android:layout_width="@dimen/sixtee_sp"
                            android:layout_height="@dimen/fiftee_sp"
                            android:background="@drawable/toogle_selector"
                            android:textOn=""
                            android:textOff=""
                            />
                    </LinearLayout>

                </LinearLayout>
                <!-- end for newsletter -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#000"/>
                <!-- for licence -->
                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="0.02"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/labelHasLicense"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:gravity="right"
                        android:text="@string/hasLicense"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/fifteen_sp" />

                    <LinearLayout
                        android:layout_weight="0.55"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content">
                        <ToggleButton
                            android:layout_marginLeft="@dimen/ten_sp"
                            android:id="@+id/switch_hasLicense"
                            android:layout_width="@dimen/sixtee_sp"
                            android:layout_height="@dimen/fiftee_sp"
                            android:background="@drawable/toogle_selector"
                            android:checked="false"
                            android:textOn=""
                            android:textOff=""
                            />
                    </LinearLayout>

                </LinearLayout>
                <!-- end for licence -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#000"/>
                <!-- for organization id  -->
                <LinearLayout
                    android:id="@+id/linearLayoutOrganizationIdContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_marginTop="@dimen/ten_sp"
                        android:layout_marginBottom="@dimen/ten_sp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="0.02"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="0.45"
                            android:gravity="right"
                            android:id="@+id/lableOrganizationId"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:text="@string/organizationId"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/fifteen_sp"/>

                        <EditText
                            android:layout_weight="0.55"
                            android:id="@+id/edit_organizationId"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_sp"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:lines="1"
                            android:paddingLeft="@dimen/five_sp"
                            android:paddingRight="@dimen/five_sp"
                            android:text=""
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/fifteen_sp"/>
                        <TextView
                            android:layout_weight="0.02"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="#000"/>

                </LinearLayout>
                <!-- end for organization id -->

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/labledemouser"
                        android:layout_width="@dimen/hundred_twenty_sp"
                        android:layout_height="wrap_content"
                        android:text="@string/demo_user"
                        android:textColor="@color/textview_color_grey"
                        android:textSize="@dimen/twentee_sp"
                        android:visibility="gone"/>

                    <ToggleButton
                        android:id="@+id/toggle_button2"
                        android:layout_width="@dimen/sixtee_sp"
                        android:layout_height="@dimen/fourtee_sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toogle_selector"
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn=""
                        android:visibility="gone"/>
                </RelativeLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="@dimen/twentee_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkbox_terms_condition"
                        android:background="@drawable/check_uncheck_background2"
                        android:button="@null"
                        android:layout_width="@dimen/twentee_sp"
                        android:layout_height="@dimen/twentee_sp"
                        />
                    <TextView
                        android:id="@+id/textview_terms_condition"
                        android:textColor="@color/textview_presseffect"
                        android:layout_marginLeft="@dimen/ten_sp"
                        android:text="@string/terms_condition"
                        android:textSize="@dimen/fifteen_sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:background="@drawable/button_icon"
                    android:layout_height="@dimen/fiftee_sp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/eighteen_sp"
                    android:layout_marginRight="@dimen/eighteen_sp"
                    android:layout_marginTop="@dimen/twentee_sp">

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/caldroid_transparent"
                    android:text="@string/send"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/button_text_size"/>
                    <ImageView
                        android:scaleType="fitStart"
                        android:layout_centerVertical="true"
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/button_arrow"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_weight="0.05"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </ScrollView>


    </LinearLayout>
    <TextView
        android:id="@+id/txt_ssoft_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_margin="@dimen/ten_sp"
        android:text="@string/my_smsc_link"
        android:textSize="@dimen/thirteen_sp"/>

</RelativeLayout>