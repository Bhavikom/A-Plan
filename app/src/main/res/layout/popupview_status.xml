<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_date_icon_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twentee_sp"
        android:layout_marginRight="@dimen/twentee_sp"
        android:layout_marginTop="@dimen/ten_sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/five_sp"
            android:paddingTop="@dimen/five_sp"
            android:text="@string/status"
            android:textColor="@color/white"
            android:textSize="@dimen/fifteen_sp" />

        <TextView
            android:id="@+id/txtdone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok_button_background"
            android:paddingBottom="@dimen/five_sp"
            android:paddingLeft="@dimen/twentee_sp"
            android:paddingRight="@dimen/twentee_sp"
            android:paddingTop="@dimen/five_sp"
            android:text="@string/ok"
            android:textColor="@color/white_color"
            android:textSize="@dimen/fifteen_sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="@dimen/ten_sp"
        android:background="@color/white_color" />

    <ListView
        android:id="@+id/listviewstatusfilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_sp"
        android:layout_marginLeft="@dimen/twentee_sp"
        android:layout_marginRight="@dimen/twentee_sp"
        android:layout_marginTop="@dimen/ten_sp">

    </ListView>
</LinearLayout>