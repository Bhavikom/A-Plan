<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear_date_dialog_main"
    android:background="@drawable/popup_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ten_sp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_dialog_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textSize="@dimen/twentee_five_sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgclose"
            android:layout_width="@dimen/fourtee_sp"
            android:layout_height="@dimen/fourtee_sp"
            android:layout_marginRight="@dimen/twentee_sp"
            android:layout_alignParentRight="true"
            android:src="@drawable/closewindow" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/twentee_sp"
            android:layout_marginTop="@dimen/twentee_sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_competion_overrun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_completion_overrun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:padding="@dimen/three_sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/completion" />

                <TextView
                    android:id="@+id/txt_completion_overrun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirtee_sp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/completion_overrun"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_started_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_started_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:padding="@dimen/three_sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/started_task" />

                <TextView
                    android:id="@+id/txt_started_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirtee_sp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/started_project_task"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_completed_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_complete_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:padding="@dimen/three_sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/completed_task" />

                <TextView
                    android:id="@+id/txt_complete_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirtee_sp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/complete_project_task"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_completed_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_complete_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:padding="@dimen/three_sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/completed_today" />

                <TextView
                    android:id="@+id/txt_complete_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirtee_sp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/complete_today"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_pending_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_pending_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:padding="@dimen/three_sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pending_task" />

                <TextView
                    android:id="@+id/txt_pending_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirtee_sp"
                    android:lines="1"
                    android:text="@string/pending_project_task"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_passive_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_passive_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:padding="@dimen/three_sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/passive" />

                <TextView
                    android:id="@+id/txt_passive_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirtee_sp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/passive_project_task"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_completed_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_complete_in_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:padding="@dimen/three_sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/completed_in_one_week" />

                <TextView
                    android:id="@+id/txt_complete_in_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirtee_sp"
                    android:lines="1"
                    android:text="@string/completed_in1week"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_task_without_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_task_without_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:padding="@dimen/three_sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/task_missing" />

                <TextView
                    android:id="@+id/txt_task_without_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirtee_sp"
                    android:lines="1"
                    android:text="@string/task_without_date"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_canceled_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_cancel_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:padding="@dimen/three_sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/canceled_task" />

                <TextView
                    android:id="@+id/txt_cancel_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirtee_sp"
                    android:lines="1"
                    android:text="@string/canceled_project_task"
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="@dimen/ten_sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_sp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:textAllCaps="false"
                    android:id="@+id/btn_date"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fifteen_sp"
                    android:background="@drawable/rounded_black_border"
                    android:text="OK"
                    android:textStyle="bold"
                    android:textSize="@dimen/twentee_sp" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>




