<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_filter_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:weightSum="1"
            tools:context="de.smacsoftwares.aplanapp.activity.SettingActivity">

            <!--start for header-->
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_alignParentTop="true"
                android:layout_weight="0.08"
                android:background="@color/header_color">

                <TextView
                    android:id="@+id/textview_title_select_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/filter_header"
                    android:textColor="@color/red"
                    android:textSize="@dimen/eighteen_sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/textview_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.92"
                android:orientation="vertical"
                android:weightSum="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.05" />
                <!-- folder filter -->
                <RelativeLayout
                    android:id="@+id/relative_folder"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="0.15"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relative_folder_sub"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/fourtee_sp">

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageview_folderfilter"
                        android:layout_width="@dimen/twentee_five_sp"
                        android:layout_height="@dimen/twentee_five_sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/fifteen_sp"
                        android:src="@drawable/filter_folder" />

                    <TextView
                        android:id="@+id/textview_folderfilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/twentee_sp"
                        android:layout_marginRight="@dimen/twentee_sp"
                        android:layout_toRightOf="@+id/imageview_folderfilter"
                        android:gravity="left|center"
                        android:lines="2"
                        android:text="@string/general_filter_folder_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.05" />


                <!-- general filter -->
                <RelativeLayout
                    android:id="@+id/relative_text"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.15">

                    <RelativeLayout
                        android:id="@+id/relative_text_sub"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/fourtee_sp">

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageview_generalfilter"
                        android:layout_width="@dimen/twentee_five_sp"
                        android:layout_height="@dimen/twentee_five_sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/fifteen_sp"
                        android:src="@drawable/filter_text" />

                    <TextView
                        android:id="@+id/textview_generalfilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/twentee_sp"
                        android:layout_marginRight="@dimen/twentee_sp"
                        android:layout_toRightOf="@+id/imageview_generalfilter"
                        android:gravity="left|center"
                        android:lines="2"
                        android:text="@string/general_filter_text_text"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/fourteen_sp" />

                    <ImageView
                        android:id="@+id/imageviewnext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.05" />

                <!-- date filter -->
                <RelativeLayout
                    android:id="@+id/relative_date"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_below="@+id/reletive2"
                    android:layout_centerInParent="true"
                    android:layout_weight="0.15"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relative_date_sub"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/fourtee_sp">

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageview_datefiter"
                        android:layout_width="@dimen/twentee_five_sp"
                        android:layout_height="@dimen/twentee_five_sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/fifteen_sp"
                        android:src="@drawable/fitler_date" />

                    <TextView
                        android:id="@+id/textview_datefilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/twentee_sp"
                        android:layout_marginRight="@dimen/twentee_sp"
                        android:layout_toRightOf="@+id/imageview_datefiter"
                        android:gravity="left|center"
                        android:lines="2"
                        android:text="@string/general_filter_date_text"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/fourteen_sp" />

                    <ImageView
                        android:id="@+id/imageviewnext3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.05" />

                <!-- user defined filter -->
                <RelativeLayout
                    android:id="@+id/relative_userdefined"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="50dp"
                    android:layout_weight="0.15"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relative_userdefined_sub"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/fourtee_sp">

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageview_userfilter"
                        android:layout_width="@dimen/twentee_five_sp"
                        android:layout_height="@dimen/twentee_five_sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/fifteen_sp"
                        android:src="@drawable/filter_user_defined" />

                    <TextView
                        android:id="@+id/textview_userdefindedfilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/twentee_sp"
                        android:layout_marginRight="@dimen/thirtee_sp"
                        android:layout_toRightOf="@+id/imageview_userfilter"
                        android:gravity="left|center"
                        android:lines="2"
                        android:text="@string/general_filter_user_defined_text"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/fourteen_sp" />

                    <ImageView
                        android:id="@+id/imageviewnext4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativefooter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eightee_sp"
                    android:layout_margin="@dimen/twentee_sp"
                    android:layout_weight="0.20">

                    <TextView
                        android:id="@+id/txt_ssoft_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/ten_sp"
                        android:layout_marginLeft="@dimen/ten_sp"
                        android:layout_marginTop="@dimen/five_sp"
                        android:text="@string/my_smsc_link"
                        android:textSize="@dimen/thirteen_sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>