<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_traffic_dialog_main"
    android:background="@drawable/popup_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ten_sp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_dialog_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/TrafficLights"
            android:textColor="@color/black"
            android:textSize="@dimen/twentee_five_sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgclose"
            android:layout_width="@dimen/fourtee_sp"
            android:layout_height="@dimen/fourtee_sp"
            android:layout_marginRight="@dimen/twentee_sp"
            android:layout_alignParentRight="true"
            android:src="@drawable/closewindow" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_sp"
        android:layout_marginTop="@dimen/twentee_sp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_traffic_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_sp"
                android:padding="@dimen/three_sp"
                android:scaleType="fitCenter"
                android:src="@drawable/traffic_red" />

            <TextView
                android:id="@+id/txt_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twentee_sp"
                android:text="@string/traffic_red"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_traffic_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_sp"
                android:padding="@dimen/three_sp"
                android:scaleType="fitCenter"
                android:src="@drawable/traffic_yellow" />

            <TextView
                android:id="@+id/txt_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twentee_sp"
                android:text="@string/traffic_yellow"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_traffic_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_sp"
                android:padding="@dimen/three_sp"
                android:scaleType="fitCenter"
                android:src="@drawable/traffic_green" />

            <TextView
                android:id="@+id/txt_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twentee_sp"
                android:text="@string/traffic_green"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/ten_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_sp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_traffic"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/fifteen_sp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black_border"
                android:text="OK"
                android:textStyle="bold"
                android:textSize="@dimen/twentee_sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>