<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_tutorial1_main"
    android:background="@drawable/tutorial_first">
    <LinearLayout
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_above="@+id/textskip"
        android:id="@+id/imgcontrol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        tools:context="de.smacsoftwares.aplanapp.fragment.FragmentTutorial1">

        <View
            android:layout_weight="0.05"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:id="@+id/view"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/two_hundred_sixtee"
            android:layout_marginRight="@dimen/two_hundred_sixtee"
            android:layout_weight="0.6"
            android:layout_width="match_parent"
            android:layout_height="0sp">
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/firstscreen"/>
        </LinearLayout>

        <View
            android:layout_weight="0.05"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:id="@+id/view2" />

        <LinearLayout
            android:weightSum="1"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_below="@+id/imgcontrol"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_lable_whatisaplan"
                android:textStyle="bold"
                android:layout_weight="0.2"
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:text="@string/was_ist_aplan"
                android:textColor="@color/black_color"
                android:textSize="@dimen/thirtee_sp" />

            <TextView
                android:layout_weight="0.850"
                android:gravity="left"
                android:id="@+id/textViewLink"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginLeft="@dimen/fifteen_sp"
                android:layout_marginRight="@dimen/fifteen_sp"
                android:text="A-Plan ist eine Projektmanagement-Software zur Verwaltung von Projekten und Ressourcen. Mit der App kÃ¶nnen die aktuellen Planungen auf einem Tablett bzw. Smartphone dargestellt werden. Die Planungen werden mit der Desktop-Version von A-Plan erstellt (siehe www.braintool.com) und auf einem SQL-Server innerhalb Ihres Firmennetzwerkes gespeichert. "
                android:textColor="@color/black_color"
                android:textSize="@dimen/fifteen_sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>