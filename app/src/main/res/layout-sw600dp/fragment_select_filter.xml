<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_filter_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="de.smacsoftwares.aplanapp.activity.SettingActivity">

        <!--start for header-->
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_alignParentTop="true"
            android:layout_weight="0.06"
            android:background="@color/header_color">

            <TextView
                android:id="@+id/textview_title_select_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/filter_header"
                android:textColor="@color/red"
                android:textSize="@dimen/header_textsize" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/textview_color_grey" />

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.94"
            android:orientation="vertical">
            <View
                android:layout_weight="0.05"
                android:layout_width="match_parent"
                android:layout_height="0sp"/>
            <!-- folder filter -->
            <RelativeLayout
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:orientation="vertical"
                android:id="@+id/relative_folder"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <RelativeLayout
                    android:id="@+id/relative_folder_sub"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/fourtee_sp"
                    android:layout_height="match_parent">

                </RelativeLayout>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageview_folderfilter"

                    android:layout_marginLeft="@dimen/twentee_sp"
                    android:src="@drawable/filter_folder"/>

                <TextView
                    android:layout_marginLeft="@dimen/twentee_sp"
                    android:layout_toRightOf="@+id/imageview_folderfilter"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_folderfilter"
                    android:text="@string/general_filter_folder_text"
                    android:textSize="@dimen/twentee_two_sp"
                    android:textColor="@color/black_color"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/next"
                    />
            </RelativeLayout>
            <View
                android:layout_weight="0.05"
                android:layout_width="match_parent"
                android:layout_height="0sp"/>


            <!-- general filter -->
            <RelativeLayout
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:id="@+id/relative_text"
                >
                <RelativeLayout
                    android:id="@+id/relative_text_sub"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/fourtee_sp"
                    android:layout_height="match_parent">

                </RelativeLayout>
                <ImageView
                    android:layout_marginLeft="@dimen/twentee_sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageview_generalfilter"
                    android:src="@drawable/filter_text"/>
                <TextView
                    android:layout_toRightOf="@+id/imageview_generalfilter"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_generalfilter"
                    android:text="@string/general_filter_text_text"
                    android:layout_marginLeft="@dimen/twentee_sp"
                    android:textSize="@dimen/twentee_two_sp"
                    android:textColor="@color/black_color"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageviewnext2"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/next"
                    />


            </RelativeLayout>
            <View
                android:layout_weight="0.05"
                android:layout_width="match_parent"
                android:layout_height="0sp"/>

            <!-- date filter -->
            <RelativeLayout
                android:layout_weight="0.15"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:id="@+id/relative_date"
                android:layout_below="@+id/reletive2"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/relative_date_sub"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/fourtee_sp"
                    android:layout_height="match_parent">

                </RelativeLayout>
                <ImageView
                    android:layout_marginLeft="@dimen/twentee_sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageview_datefiter"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/fitler_date"/>

                <TextView
                    android:layout_toRightOf="@+id/imageview_datefiter"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_datefilter"
                    android:text="@string/general_filter_date_text"
                    android:layout_marginLeft="@dimen/twentee_sp"
                    android:textSize="@dimen/twentee_two_sp"
                    android:textColor="@color/black_color"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageviewnext3"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/next"
                    />



            </RelativeLayout>
            <View
                android:layout_weight="0.05"
                android:layout_width="match_parent"
                android:layout_height="0sp"/>

            <!-- user defined filter -->
            <RelativeLayout
                android:layout_weight="0.15"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginBottom="50dp"
                android:id="@+id/relative_userdefined"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/relative_userdefined_sub"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/fourtee_sp"
                    android:layout_height="match_parent">

                </RelativeLayout>
                <ImageView
                    android:layout_marginLeft="@dimen/twentee_sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageview_userfilter"
                    android:layout_marginTop="20dp"

                    android:src="@drawable/filter_user_defined"/>

                <TextView
                    android:layout_marginLeft="@dimen/twentee_sp"
                    android:layout_toRightOf="@+id/imageview_userfilter"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_userdefindedfilter"
                    android:text="@string/general_filter_user_defined_text"
                    android:textSize="@dimen/twentee_two_sp"
                    android:textColor="@color/black_color"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageviewnext4"
                    android:src="@drawable/next"
                    android:layout_alignParentRight="true"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativefooter"
                android:layout_weight="0.20"
                android:layout_margin="@dimen/twentee_sp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eightee_sp">
                <TextView
                    android:layout_marginLeft="@dimen/twentee_sp"
                    android:layout_marginTop="@dimen/five_sp"
                    android:text="@string/my_smsc_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_sp"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/twentee_sp"
                    android:id="@+id/txt_ssoft_link" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
    </FrameLayout>