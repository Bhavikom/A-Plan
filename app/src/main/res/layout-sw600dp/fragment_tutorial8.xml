<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relative__tutorial8_main"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial_first">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tutorial_first"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.150"/>

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred"

            android:gravity="center"
            android:orientation="vertical"
            tools:context="de.smacsoftwares.aplanapp.fragment.FragmentTutorial1">

            <!-- TODO: Update blank fragment layout -->
            <ImageView
                android:layout_width="@dimen/two_hundred"
                android:layout_height="@dimen/two_hundred"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo"
                android:id="@+id/imageView2">
            </ImageView>
        </LinearLayout>
        <TextView
            android:id="@+id/lable_aplan"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/hundred_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-Plan"
            android:textColor="@color/red"
            android:textSize="@dimen/twentee_five_sp"/>

        <LinearLayout
            android:layout_marginTop="@dimen/hundred_sp"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_dontshowagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_color"
                android:textSize="@dimen/twentee_sp"
                />

            <ToggleButton
                android:layout_marginLeft="@dimen/ten_sp"
                android:id="@+id/toggle_button"
                android:layout_width="@dimen/sixtee_sp"
                android:layout_height="@dimen/fiftee_sp"
                android:background="@drawable/toogle_selector"
                android:textOn=""
                android:textOff=""
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/textskip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/ten_sp"
        android:text="Skip"
        android:textColor="@color/red"
        android:textSize="@dimen/twentee_five_sp"/>

</RelativeLayout>