<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_sign_out_main"
    android:background="@drawable/popup_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twentee_sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/terms_condition_title"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/thirtee_sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twentee_five_sp"
            android:gravity="center_horizontal"
            android:text="@string/terms_condition_message"
            android:textColor="@color/black"
            android:textSize="@dimen/twentee_sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="@dimen/twentee_five_sp"
        android:background="@color/grey_dashboard" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtee_sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_custom_popup_background"
            android:gravity="center"
            android:text="@string/Cancel"
            android:textColor="@color/textview_presseffect"
            android:textSize="@dimen/thirtee_sp" />

        <View
            android:layout_width=".5sp"
            android:layout_height="wrap_content"
            android:background="@color/grey_dashboard" />

        <TextView
            android:id="@+id/agree"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_custom_pupup_background2"
            android:gravity="center"
            android:text="@string/agree"
            android:textColor="@color/textview_presseffect"
            android:textSize="@dimen/thirtee_sp" />
    </LinearLayout>
</LinearLayout>




