<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial_first">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tutorial_first"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.150"/>

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred"

            android:gravity="center"
            android:orientation="vertical"
            tools:context="com.ssoft.aplanproject.fragment.FragmentTutorial1">

            <!-- TODO: Update blank fragment layout -->
            <ImageView
                android:layout_width="@dimen/two_hundred"
                android:layout_height="@dimen/two_hundred"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo"
                android:id="@+id/imageView2">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't show it again"
                android:textColor="@color/black_color"
                android:textSize="@dimen/twentee_sp"
                />
            <Switch
                android:layout_width="@dimen/seventee_sp"
                android:layout_height="@dimen/twentee_five_sp"
                android:id="@+id/switchbutton"
                android:track="@drawable/switch_track_selector"
                android:switchMinWidth="50dp"
                android:checked="false"
                android:layout_marginLeft="@dimen/twentee_sp"
                android:thumb="@drawable/switch_thumb_selector"
                />

            <!--<ToggleButton
                android:id="@+id/togglebutton"
                android:layout_width="@dimen/fiftee_sp"
                android:layout_height="@dimen/fiftee_sp"
                android:layout_marginLeft="@dimen/twentee_sp"
                android:background="@drawable/toogle_selector"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn=""/>-->
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/textskip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/fifteen_sp"
        android:layout_marginRight="@dimen/fifteen_sp"
        android:text="Skip"
        android:textColor="@color/black"
        android:textSize="@dimen/twentee_five_sp"/>

</RelativeLayout>