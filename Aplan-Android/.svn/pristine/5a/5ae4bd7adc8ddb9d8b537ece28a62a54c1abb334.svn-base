<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.ssoft.aplanproject.fragment.FragmentProfile">

        <LinearLayout
            android:id="@+id/linaerphoto"
            android:layout_marginTop="@dimen/fifteen_sp"
            android:layout_marginLeft="@dimen/fifteen_sp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/four_hundred_fourtee"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="@dimen/three_hundred_twenty"
                android:layout_height="@dimen/three_hundred_twenty"
                android:src="@drawable/profile_logo"/>
            <TextView
                android:id="@+id/textviewchangepass"
                android:layout_marginTop="@dimen/fifteen_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textview_color_blue"
                android:text="Change Password"
                android:textSize="@dimen/thirtee_sp"/>
        </LinearLayout>
    <LinearLayout

        android:layout_toRightOf="@+id/linaerphoto"
        android:layout_marginTop="@dimen/fifteen_sp"
        android:layout_marginLeft="@dimen/fifteen_sp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/four_hundred_fourtee"
        android:orientation="vertical"

        android:gravity="center">

        <TextView
            android:layout_margin="@dimen/ten_sp"
            android:id="@+id/textviewname"
            android:layout_marginTop="@dimen/fifteen_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:text="Bhavik"
            android:textSize="@dimen/twentee_five_sp"/>

        <TextView
            android:layout_margin="@dimen/ten_sp"
            android:id="@+id/textviewemail"
            android:layout_marginTop="@dimen/fifteen_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:text="bhavik@ssoft.in"
            android:textSize="@dimen/twentee_five_sp"/>
        <TextView
            android:layout_margin="@dimen/ten_sp"
            android:id="@+id/textviewmobile"
            android:layout_marginTop="@dimen/fifteen_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:textSize="@dimen/twentee_five_sp"/>
        <TextView
            android:layout_margin="@dimen/ten_sp"
            android:id="@+id/textviewdepartment"
            android:layout_marginTop="@dimen/fifteen_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:text=""
            android:textSize="@dimen/twentee_five_sp"/>
    </LinearLayout>
    <!-- start for language panel -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twentee_sp"
        >
        <ImageView
            android:layout_marginRight="@dimen/ten_sp"
            android:id="@+id/img_english"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_england"/>

        <ImageView
            android:id="@+id/img_germany"
            android:layout_marginRight="@dimen/ten_sp"
            android:layout_toLeftOf="@+id/img_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_germany"/>
    </RelativeLayout>
    <!-- end for language panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linaerphoto">

    </LinearLayout>

</RelativeLayout>
